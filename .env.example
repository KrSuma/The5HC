# The5HC Django Application Environment Variables
# Copy this file to .env and update with your values

# Django Settings
SECRET_KEY=your-very-secret-key-here-minimum-50-characters
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# Database (Heroku provides DATABASE_URL automatically)
# DATABASE_URL=postgres://user:password@host:port/dbname

# Email Configuration (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
EMAIL_USE_TLS=True

# Django Settings Module
DJANGO_SETTINGS_MODULE=the5hc.settings.production

# API Settings (Optional)
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com

# Logging Level
LOG_LEVEL=INFO